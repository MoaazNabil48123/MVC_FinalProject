    <!-- Hero Area Start-->
   <div class="slider-area ">
        <div class="single-slider slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center">
                            <h2>Watch Shop</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero Area End-->
    <!--================Single Product Area =================-->
    <div class="product_image_area">
        <div class="container">
            <div class="row justify-content-center">
            <div class="col-lg-12" style="height:auto">

                <img src="@Model.Image" alt="Loading "  />
                      
                      
                   
                </div>
                <div class="col-lg-10">
                    <div class="single_product_text text-center">
                        <h3>
                           @Model.Name
                        </h3>
                        <p>@Model.Description                        </p>
                    <div class="card_area ">
                        <div class="row pl-3 mb-6 justify-content-md-center align-items-center">
                            <div class="col-md-3">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input type="number" value="1" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />

                                </div>
                            </div>
                        </div>
                        <div class="add_to_cart justify-content-md-center align-items-center">
                                <a href="#" class="btn_3">add to cart</a>
                            <a asp-action="Index" class="btn_3">
                                Back to home
                            </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
















