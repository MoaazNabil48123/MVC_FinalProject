                                    <span style="width:30px; display: inline-block;"></span>
                            <input class="form-check-input" type="radio" name="flexRadioDefault+@j" id="flexRadioDefault1" value="@x.Id" onclick="GetPrice()">
                            <label class="form-check-label" for="flexRadioDefault1">

