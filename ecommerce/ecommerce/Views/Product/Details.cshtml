@model Product
@{
    ViewData["Title"] = "Details";
    Layout = "_MyLayout";
}

@section Links{



    <link href="~/css/style.css" rel="stylesheet">




}
    <!-- Hero Area Start-->
   <div class="slider-area ">
        <div class="single-slider slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center">
                            <h2>Emart Shop</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero Area End-->







<!-- Shop Detail Start -->
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 mb-30" style="justify-content: center">
            <div id="product-carousel" class="carousel slide" data-ride="carousel" style="justify-content: center">
                <div class="carousel-inner bg-light" style="justify-content: center">
                    
                        
                        <div class="carousel-item active" >
                            <img class="w-20 h-20" src="@Model.Image" alt="Image" style="justify-content: center">
                    </div>
                    
                   
                </div>
           
            </div>
        </div>

        <div class="col-lg-7 h-auto mb-30">
            <div class="h-100 bg-light p-30">
                <h3>@Model.Name</h3>
               
                <div >
                    <h3 class="text-dark mr-3" style="display: inline-block">
                        Price: $
                    </h3>
                    <h3 class="font-weight-semi-bold mb-4" id="price" style="display: inline-block">@Model.ProductItems[0].Price</h3>
                </div>
                <p class="mb-4">
                    @Model.Description
                </p>

                @{
                    int j = 0;
                }
                @foreach (Variation variation in ViewBag.variationWithOptions)
                {
                    j++;
                    <div class="d-flex mb-@j+2" id="var">
                        <strong class="text-dark mr-3" for="flexRadioDefault1">

                            @variation.Name


                        </strong>
                        <form>

                        <div class="custom-control custom-radio ">
                        @foreach (VariationOptions x in variation.VariationOptions)
                        {
                                    <span style="width:30px; display: inline-block;"></span>
                            <input class="form-check-input" type="radio" name="flexRadioDefault+@j" id="flexRadioDefault1" value="@x.Id" onclick="GetPrice()">
                            <label class="form-check-label" for="flexRadioDefault1">

                                @x.Value

                            </label>
                                                }
                        </div>
                        </form>
                    </div>
                }
                <p id="modelId" hidden>@Model.Id</p>
             
                <div class="d-flex align-items-center mb-4 pt-2">
                    <div class="input-group quantity mr-3" style="width: 130px;">
                      
                        <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                              id="inputGroup-sizing-default">
                            Count
                        </span>
                        <input type="number" value="1" class="form-control text-end" min="0" id="counter" />

                    
                    </div>

                    <button class="btn btn-primary px-3">
                        <i class="fa fa-shopping-cart mr-1"></i> Add To
                        Cart
                    </button>
                    <button class="btn btn-primary px-3" asp-action="Index?@Model.CategoryId">
                        <i class="fa fa-shopping-cart mr-1" ></i> Back To Home
                    </button>
                </div>
              
            </div>
           
        </div>
        <div class="row px-xl-5">
            <div class="col">
                <div class="bg-light p-30">
                    <div class="nav nav-tabs mb-4">
                        
                        <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Reviews (@Model.Reviews.Count)</a>
                    </div>
                    <div class="tab-content">
                       

                        <div class="tab-pane fade show active" id="tab-pane-3">
                            <div class="row">
                                <div class="col-md-6">
                                    <h4 class="mb-4"> Review for "@Model.Name"</h4>
                                    <div class="media mb-4">
                                       <div class="media-body">
                                            @foreach (Review review in ViewBag.reviewsWithUserAndProduct)
                                            {
                                            <h6>@review.User.UserName<small> - <i>@review.CreatedOn</i></small></h6>
                                            <div class="text-primary mb-2">
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star-half-alt"></i>
                                                <i class="far fa-star"></i>
                                            </div>
                                                
                                            <p>@review.Comment</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h4 class="mb-4">Leave a review</h4>
                                    <small>Your email address will not be published. Required fields are marked *</small>
                                
                                  
                                        <div class="form-group">
                                            <label for="message">Your Review *</label>
                                            <textarea id="comment" cols="30" rows="5" class="form-control"></textarea>
                                        </div>
                                       
                                        <div class="form-group mb-0">
@*                                        <a href="/Product/AddReview?productId=@Model.Id&Comment=GetReview_1()" onclick="GetReview()">Leave Your Review</a>
*@                                        <a class="btn btn-primary px-3" onclick="GetReview()">Leave Your Review</a>
                                        </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  
</div>
<!-- Shop Detail End -->











