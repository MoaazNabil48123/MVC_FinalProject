@model List<Product>

@{
    ViewData["Title"] = "Products";
    Layout = "_MyLayout";
}

@section Links{
    <link rel="stylesheet" href="~/css/css_Shop/style.css"/>
    <link rel="stylesheet" href="~/css/css_Shop/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/css_Shop/fontawesome-all.min.css"/>
}

<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Secure & Reliable</p>
                    <h1>Shop</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->

<section class="popular-items latest-padding">
    <div class="'container">
        <div class="tab-content" id="nav-tabContent">
            <!-- card -->
            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                <div class="row">
                    @foreach (Product product in Model)
                    {
                        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
                            <div class="single-popular-items mb-50 text-center">
                                <div class="popular-img">
                                    <img style="height:400px" src="@product.Image" alt="">
                                    <div class="img-cap">
                                        <span>Add to cart</span>
                                    </div>
                                    <div class="favorit-items">
                                        <span class="flaticon-heart"></span>
                                    </div>
                                </div>
                                <div class="popular-caption">
                                    <h3><a href="product_details.html">@product.Name</a></h3>
                                    <span>@product.Description</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>                
        </div>
    </div>
</section>

@{
    ViewData["Title"] = "Index";
}

<h1>Shop</h1>

<table class="table table-hover table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th class="text-center">Discription</th>
        <th class="text-center">Department</th>

    </tr>

    @{
        int i = 1;
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>@i</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Category.Name</td>


        </tr>
        ++i;
    }
</table>
