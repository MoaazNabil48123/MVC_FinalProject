@model ChangePassword_VM
@{
    ViewData["Title"] = "ChangePassword";
}

@section Links{
    <link rel="stylesheet" href="/css/User/ChangePassword.css" />
}

<div class="row bachground">
    <div class="E-martContent">
        <h3 class="text-center mb-5" style="color:#F28123">Change Password</h3>
        <form method="post" action="/User/ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row mb-3">
                <label asp-for="OldPassword" class="control-label text-uppercase text-white col-4 mt-2"></label>
                <div class="col-8">
                    <div class="E-martInputText">
                        <input asp-for="OldPassword" class="E-martInputText form-control " />
                        <span class="E-martInputText"></span>
                    </div>
                    <span asp-validation-for="OldPassword" class="text-danger col-8 align-content-end"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="NewPassword" class="control-label text-uppercase text-white col-4 mt-2"></label>
                <div class="col-8">
                    <div class="E-martInputText">
                        <input asp-for="NewPassword" class="E-martInputText form-control" />
                        <span class="E-martInputText"></span>
                    </div>
                    
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-4">
                <label asp-for="ConfirmPassword" class="control-label text-uppercase text-white col-4 mt-2"></label>
                <div class="col-8">
                    <div class="E-martInputText">
                        <input asp-for="ConfirmPassword" class="E-martInputText form-control" />
                        <span class="E-martInputText"></span>
                    </div>
                    
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="E-martButton mb-3 w-100" />
                <div><a href="/Home" class="E-martButton d-block">Cancel</a></div>
            </div>
        </form>
        <div class="hr"></div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}