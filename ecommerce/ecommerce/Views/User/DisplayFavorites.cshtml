@model List<Product>
@{
    ViewData["Title"] = "DisplayFavorites";
}

<style>
	.btn-outline-warning {
		color: #F28123;
		border-color: #F28123;
	}

		.btn-outline-warning:hover {
			color: #000;
			background-color: #F28123;
			border-color: #F28123;
		}
</style>
<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Secure & Reliable</p>
					<h1>Favorites</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end breadcrumb section -->
<!-- cart -->
<div class="cart-section mt-150 mb-150">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-lg-10 col-md-12">
				<div class="cart-table-wrap">
					<table class="cart-table">
						<thead class="cart-table-head">
							<tr class="table-head-row">
								<th class="product-remove"></th>
								<th class="product-image"> Image</th>
								<th class="product-name">Name</th>
								<th class="product-price">Price($)</th>
							</tr>
						</thead>
						<tbody>
							@if (Model.Count > 0)
							{
								@foreach (var Product in Model)
								{
									<tr class="table-body-row">
										<td class="product-remove">
											@*remove*@
											<a onclick="DeleteProduct(@Product.Id)"><i class="far fa-window-close text-danger"></i></a>
										</td>
										<td class="product-image">
											@*image*@
											<img src="@Product.Image" alt="">
										</td>
										<td class="product-name">
											@*Name & Description*@
											<div>@Product.Name</div>
											<div>@Product.Description</div>
										</td>
										<td class="product-price">
											@*price*@
											@Product.ProductItems[0].Price
										</td>
									</tr>
								}

							}
							else
							{
								<tr>
									<td colspan="6">
										<h5 style="color:#F28123">
											You have no favorites
										</h5>

									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end cart -->
@section Scripts{
	<script>
		function DeleteProduct(id) {
			Swal.fire({
				title: 'Are you sure?',
				text: "You gonna remove the product from your favorites!",
				icon: 'warning',
				showCancelButton: true,
				confirmButtonColor: '#3085d6',
				cancelButtonColor: '#d33',
				confirmButtonText: 'Yes, remove it!'
			}).then((result) => {
				if (result.isConfirmed) {
					window.location.href = "/User/RemoveFromFavorites?productId=" + id;
				}
			})
		}

	</script>

}